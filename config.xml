<?xml version = "1.0" encoding = "UTF-8"?>

<widget xmlns = "http://www.w3.org/ns/widgets" xmlns:gap = "http://phonegap.com/ns/1.0" id = "com.AD.AWW" version = "1.0.1" versionCode="5">

  <name>AWW Data Entry</name>
  <description>
    Alabama Water Watch - Data Entry App
  </description>
  <author email="landerson@anvildev.com">
    Lee Anderson and Mike Reutebuch
  </author>

  <preference name="orientation" value="portrait" />
  <preference name="fullscreen" value="true" />
  <preference name="detect-data-types" value="false" />
  <preference name="loadUrlTimeoutValue" value="300000" />
  <preference name="DisallowOverscroll" value="true" />
  <preference name="webviewbounce" value="false" />
  
  <access origin="*" />
  <content src="index.html" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="sms:*" />
  <allow-intent href="tel:*" />
  <allow-intent href="geo:*" />
  <allow-intent href="mailto:*" />
 
  <plugin name="cordova-plugin-camera" spec="~2.3.0">
    <variable name="CAMERA_USAGE_DESCRIPTION" value="Allow the AWW app to use your camera" />
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Allow the AWW app to access your photos" />
  </plugin>
  <plugin name="cordova-plugin-media-capture" spec="~1.4.0">
    <variable name="PHOTOLIBRARY_USAGE_DESCRIPTION" value="Allow the AWW app to access your photos" />
	<variable name="CAMERA_USAGE_DESCRIPTION" value="Allow the AWW app to use your camera" />
  </plugin>  
  <plugin name="cordova-plugin-geolocation" spec="https://github.com/apache/cordova-plugin-geolocation/" >
    <variable name="GEOLOCATION_USAGE_DESCRIPTION" value="Allow the AWW app to use your location" />
  </plugin>
  <plugin name="cordova-plugin-inappbrowser" spec="~1.5.0" />
  <plugin name="cordova-plugin-whitelist" spec="~1.3.0" />

  <platform name="ios">
	<preference name="Orientation" value="portrait" />
	<preference name="AutoHideSplashScreen" value="false" />
	<icon width="76" height="76" src="res/icon/icon-76.png" />
	<icon width="152" height="152" src="res/icon/icon-76@2x.png" />
	<icon width="72" height="72" src="res/icon/icon-72.png" />
	<icon width="144" height="144" src="res/icon/icon-72@2x.png" />
	<icon width="60" height="60" src="res/icon/icon-60.png" />
	<icon width="120" height="120" src="res/icon/icon-60@2x.png" />
	<icon width="180" height="180" src="res/icon/icon-60@3x.png" />
	<icon width="50" height="50" src="res/icon/icon-50.png" />
	<icon width="100" height="100" src="res/icon/icon-50@2x.png" />
	<icon width="40" height="40" src="res/icon/icon-40.png" />
	<icon width="80" height="80" src="res/icon/icon-40@2x.png" />
	<icon width="120" height="120" src="res/icon/icon-60@2x.png" />
	<icon width="57" height="57" src="res/icon/icon.png" />
	<icon width="114" height="114" src="res/icon/icon@2x.png" />
	<icon width="29" height="29" src="res/icon/icon-29.png" />
	<icon width="58" height="58" src="res/icon/icon-29@2x.png" />
	<splash width="320" height="480" src="res/splash/ios-320x480.png" />
	<splash width="640" height="960" src="res/splash/ios-320x480@2x.png" />
	<splash width="768" height="1024" src="res/splash/ios-portrait-768x1024.png" />
	<splash width="1536" height="2048" src="res/splash/ios-portrait-768x1024@2x.png" />
	<splash width="1024" height="768" src="res/splash/ios-landscape-768x1024.png" />
	<splash width="2048" height="1536" src="res/splash/ios-landscape-768x1024@2x.png" />
	<splash width="640" height="1136" src="res/splash/ios-320x568@2x.png" />
	<splash width="750" height="1334" src="res/splash/ios-375x667@2x.png" />
	<splash width="1242" height="2208" src="res/splash/ios-portrait-414x736@3x.png" />
	<splash width="2208" height="1242" src="res/splash/ios-landscape-414x736@3x.png" />
  </platform>
  
    <platform name="android">
        <preference name="android-minSdkVersion" value="15" />
        <preference name="Orientation" value="portrait" />
        <preference name="SplashScreenDelay" value="0" />
        <icon density="ldpi" src="resources/icon/android/icon-36.png" />
        <icon density="mdpi" src="res/icon/mdpi-48.png" />
        <icon density="hdpi" src="res/icon/hdpi-72.png" />
        <icon density="xhdpi" src="res/icon/xhdpi-96.png" />
        <icon density="xxhdpi" src="res/icon/xxhdpi-144.png" />
        <icon density="fr-xxhdpi" src="res/icon/xxxhdpi-192.png" />
		<splash src="res/splash/android-ldpi-200x320.png" platform="android" qualifier="ldpi" />
	<splash src="res/splash/android-mdpi-320x480.png" platform="android" qualifier="mdpi" />
	<splash src="res/splash/android-hdpi-480x800.png" platform="android" qualifier="hdpi" />
	<splash src="res/splash/android-xhdpi-720x1280.png" platform="android" qualifier="xhdpi" />
	<splash src="res/splash/android-xxhdpi-960x1600.png" platform="android" qualifier="port-xxhdpi" />
	<splash src="res/splash/android-xxhdpi-1280x1920.png" platform="android" qualifier="land-xxhdpi" />  
    </platform>

	<platform name="wp8">
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="Orientation" value="portrait" />
        <icon height="99" src="resources/icon/wp8/ApplicationIcon.png" width="99" />
        <icon height="159" src="resources/icon/wp8/TileMedium.png" width="159" />
        <icon height="110" src="resources/icon/wp8/TileSmall.png" width="110" />
		<splash src="res/splash/winphone/splash.jpg" platform="winphone" />
    </platform>
    <engine name="wp8" spec="~3.8.1" />
    <engine name="android" spec="~5.0.0" />
    <engine name="ios" spec="~4.2.1" />

</widget>